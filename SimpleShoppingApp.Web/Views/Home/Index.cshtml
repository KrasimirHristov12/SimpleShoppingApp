@model IndexViewModel
@{
    ViewData["Title"] = "Home Page";
    var RandomProducts = Model.RandomProducts.ToList();
}

<div class="text-center mb-4">
    <h1 class="display-6">Welcome to the best shop in the world!</h1>
</div>

<div class="row mb-4">
    <div class="offset-md-4 col-md-5">
        <div class="card">
            <ul class="list-group list-group-flush">
                <li class="list-group-item">Total products:</li>
                <li class="list-group-item">Total users:</li>
            </ul>
        </div>
    </div>
</div>

<div class="text-center">
    <p class="fs-4 fst-italic">Some random products:</p>
</div>

<div class="row">

    @for (int i = 0; i < RandomProducts.Count; i++)
    {
        <div class="col-md-4 mb-3">
            <a asp-controller="Products" asp-action="Index" asp-route-id="@RandomProducts[i].Id" class="link-dark text-decoration-none">
                <div class="card">
                    <img src="~/images/products/@(RandomProducts[i].Image.Name + "." + RandomProducts[i].Image.Extension)" class="card-img-top" alt="@RandomProducts[i].Name Image" />
                    <div class="card-body">
                        <h5 class="card-title">@RandomProducts[i].Name</h5>
                        <p class="card-text">Rating: @RandomProducts[i].Rating<br /><br /><span class="text-danger fw-bold fs-6">$@RandomProducts[i].Price</span></p>
                    </div>
                </div>
            </a>
        </div>
    }

</div>

