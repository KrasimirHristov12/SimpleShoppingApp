<div class="card mb-4">
    <div class="card-header py-3">
        <h5 class="mb-0">Summary</h5>
    </div>
    <div class="card-body">
        <ul class="list-group list-group-flush">
            <li class="list-group-item d-flex justify-content-between align-items-center px-0 address-list">
                Shipping Address
                <span></span>
            </li>
            <li class="list-group-item d-flex justify-content-between align-items-center px-0 phone-number">
                Phone Number
                <span></span>
            </li>

            <li class="list-group-item d-flex justify-content-between align-items-center px-0 payment-method">
                Payment Method
                <span></span>
            </li>
            <li class="list-group-item d-flex justify-content-between align-items-center border-0 px-0 mb-3">
                <div>
                    <strong>Total amount</strong>
                </div>
                <span><strong class="total-price">$@Model.TotalPrice</strong></span>
            </li>
        </ul>
        <button type="submit" class="btn btn-primary btn-lg btn-block">
            Make an order
        </button>
    </div>
</div>