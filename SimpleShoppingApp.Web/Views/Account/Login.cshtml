@model LoginInputModel
@{
    ViewData["Title"] = "Login page";
}
@if (TempData.ContainsKey("ConfirmationSent"))
{
    <div class="alert alert-primary" role="alert">
        @TempData["ConfirmationSent"]
    </div>
}

@if (TempData.ContainsKey("ResetLinkSent"))
{
    <div class="alert alert-primary" role="alert">
        @TempData["ResetLinkSent"]
    </div>
}

@if (TempData.ContainsKey("ChangePasswordSuccessful"))
{
    <div class="alert alert-success" role="alert">
        @TempData["ChangePasswordSuccessful"]
    </div>
}


<form method="post" class="offset-md-4 col-md-4">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div>
        <label asp-for="Email"></label>
        <input class="form-control" asp-for="Email" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="mt-2">
        <label asp-for="Password"></label>
        <input class="form-control" asp-for="Password" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>


    <div class="mt-2">
        <input class="form-check-input" asp-for="RememberMe" />
        <label class="form-check-label" asp-for="RememberMe"></label>
        <span asp-validation-for="RememberMe" class="text-danger"></span>
    </div>

    <div class="mt-2">
        <a asp-action="ForgotPassword" class="link-underline-light">I forgot my password</a>
    </div>

    <div class="mt-2">
        <button type="submit" class="btn btn-primary">Log in</button>
    </div>

</form>